with "../../ada_fuse";

project RotFS is

    for Source_Dirs use ("src");
    for Languages use ("Ada");
    for Exec_Dir use ".";
    for Object_Dir use "obj";
    for Main use ("rotfs_main.adb");

    package Compiler is
        for Default_Switches ("ada") use
            ("-W", "-Wall", "-gnato", "-gnat2012", "-g", "-gnatn");
    end Compiler;

    package Linker is
       for Default_Switches ("Ada") use (Ada_Fuse.Fuse_Libs);
    end Linker;

end RotFS;
